---
import { css } from '~/styled-system/css';
import DefaultLayout from './DefaultLayout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<DefaultLayout>
  <article class={css({ direction: 'column', w: '100%', p: '2.5rem 1.5rem' })}>
    <h1>{title}</h1>
    <slot />
  </article>
</DefaultLayout>
