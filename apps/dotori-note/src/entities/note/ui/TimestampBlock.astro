---
interface Props {
  recordDate: string;
}

const { recordDate } = Astro.props;
---

<div class="flex flex-col">
  <span class="text-sm text-zinc-500 dark:text-zinc-400 text-right">
    최근 변경일: 
    <time
      class="my-4"
      datetime={new Date(recordDate).toISOString()}
    >
      {
        new Date(recordDate).toLocaleDateString('ko-KR', {
          year: 'numeric',
          month: '2-digit',
          day: '2-digit',
        })
      }
    </time>
  </span>
  <slot />
</div>
