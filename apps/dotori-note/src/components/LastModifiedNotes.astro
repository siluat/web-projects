---
import { getCollection } from 'astro:content';
import { getNormalizedNote } from '~/utils/note-collection';

const entries = await getCollection('note');

const contents = (await Promise.all(entries.map(getNormalizedNote))).sort(
  (a, b) => b.lastModified.valueOf() - a.lastModified.valueOf(),
);
---

<ul class="pl-0 flex flex-col">
  {
    contents.map((c) => (
      <li class="my-2">
        <a class="flex flex-col" href={`/note/${c.slug}`}>
          {c.title}
          <time class="text-xs text-zinc-500 dark:text-zinc-400 mt-1" datetime={c.lastModified.toISOString()}>
            {c.lastModified.toLocaleDateString('ko-KR')}
          </time>
        </a>
      </li>
    ))
  }
</ul>
