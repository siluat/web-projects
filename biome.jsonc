{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "includes": [
      "**",
      "!**/.astro", // generated by Astro
      "!**/.claude", // generated by Claude
      "!**/.next", // generated by Next.js
      "!**/.turbo", // generated by Turborepo
      "!**/dist", // build output
      "!**/styled-system", // generated by Panda CSS
      "!**/packages/shadcn-ui", // generated by shadcn/ui
      "!**/test-results", // generated by Test Runner
      "!**/*.astro", // handled by Astro extension
      "!**/coverage", // generated by Test Runner
      "!**/target" // Rust build output
    ]
    // "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    },
    "assist": {
      "enabled": true
    }
  }
}
